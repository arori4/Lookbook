<?xml version="1.0" encoding="utf-8"?>
<!--modified by Yuanmin Zhang on May 22rd,2016-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.arori4.lookbook.Closet.UpdateClothingActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?color2"
            android:orientation="horizontal">

            <!--category icon set-->
            <LinearLayout
                android:id="@+id/clothing_attributes_categories"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="?color1"
                android:orientation="vertical"
                android:padding="3dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                    android:scaleType="fitCenter"
                    android:src="@drawable/category"/>

                <TextView
                    android:id="@+id/CategoryTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Category"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="false"
                    android:typeface="monospace"
                    android:textSize="@dimen/abc_action_bar_content_inset_material" />
            </LinearLayout>

            <Spinner
                android:id="@+id/Category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?color2"
            android:orientation="horizontal">

            <!--color icon set-->
            <LinearLayout
                android:id="@+id/clothing_attributes_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="?color1"
                android:orientation="vertical"
                android:padding="3dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                    android:scaleType="fitCenter"
                    android:src="@drawable/color_icon"/>

                <TextView
                    android:id="@+id/ColorTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Color"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="false"
                    android:typeface="monospace"
                    android:textSize="@dimen/abc_action_bar_content_inset_material" />
            </LinearLayout>

            <Spinner
                android:id="@+id/Color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:spinnerMode="dropdown"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?color2"
            android:orientation="horizontal">

            <!--weather icon set-->
            <LinearLayout
                android:id="@+id/clothing_attributes_weather"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="?color1"
                android:orientation="vertical"
                android:padding="3dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                    android:scaleType="fitCenter"
                    android:src="@drawable/weather_icon"/>

                <TextView
                    android:id="@+id/weatherTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Weather"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="false"
                    android:typeface="monospace"
                    android:textSize="@dimen/abc_action_bar_content_inset_material" />
            </LinearLayout>

            <Spinner
                android:id="@+id/Weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?color2"
            android:orientation="horizontal">

            <!--occasion icon set-->
            <LinearLayout
                android:id="@+id/clothing_attributes_occasion"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="?color1"
                android:orientation="vertical"
                android:padding="3dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                    android:scaleType="fitCenter"
                    android:src="@drawable/formal"/>

                <TextView
                    android:id="@+id/occasionTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Occasion"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="false"
                    android:typeface="monospace"
                    android:textSize="@dimen/abc_action_bar_content_inset_material" />
            </LinearLayout>

            <Spinner
                android:id="@+id/Occasion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.3"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?color2"
            android:orientation="horizontal"
            android:weightSum="1">

            <!--Notes icon set-->
            <LinearLayout
                android:id="@+id/clothing_attributes_notes"
                android:layout_width="85dp"
                android:layout_height="fill_parent"
                android:background="?color1"
                android:orientation="vertical"
                android:padding="3dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
                    android:scaleType="fitCenter"
                    android:src="@drawable/notes"/>

                <TextView
                    android:id="@+id/notesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Notes"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="false"
                    android:typeface="monospace"
                    android:textSize="@dimen/abc_action_bar_content_inset_material" />
            </LinearLayout>

            <EditText
                android:id="@+id/Notes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.48"/>

            <ImageButton
                android:id="@+id/add_clothing_image_preview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.44"
                android:onClick="showImagePreview"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/Worn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:checked="false"
                android:text="Worn"/>

            <CheckBox
                android:id="@+id/Shared"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:checked="false"
                android:text="Shared"/>

            <CheckBox
                android:id="@+id/Lost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:checked="false"
                android:text="Lost"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="Done"
                android:typeface="serif"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>