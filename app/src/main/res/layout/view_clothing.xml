<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Closet.ViewClothingActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true" >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <!-- clothing item image -->
            <ImageView
                android:id="@+id/view_clothing_picture"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@android:drawable/sym_def_app_icon"/>

            <TableLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:shrinkColumns="2" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="@dimen/attribute_icon_size"
                        android:layout_height="@dimen/attribute_icon_size"
                        android:padding="3dp"
                        android:src="@drawable/category"/>

                    <TextView
                        android:id="@+id/closet_item_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textColor="?colorAccent"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/closet_item_category_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="@dimen/attribute_icon_size"
                        android:layout_height="@dimen/attribute_icon_size"
                        android:padding="3dp"
                        android:src="@drawable/color_icon"/>

                    <TextView
                        android:id="@+id/closet_item_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color"
                        android:textColor="?colorAccent"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/closet_item_color_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="@dimen/attribute_icon_size"
                        android:layout_height="@dimen/attribute_icon_size"
                        android:padding="3dp"
                        android:src="@drawable/weather_icon"/>

                    <TextView
                        android:id="@+id/closet_item_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weather"
                        android:textColor="?colorAccent"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/closet_item_weather_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="@dimen/attribute_icon_size"
                        android:layout_height="@dimen/attribute_icon_size"
                        android:padding="3dp"
                        android:src="@drawable/formal"/>

                    <TextView
                        android:id="@+id/closet_item_occasion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/occasion"
                        android:textColor="?colorAccent"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/closet_item_occasion_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:layout_width="@dimen/attribute_icon_size"
                        android:layout_height="@dimen/attribute_icon_size"
                        android:padding="3dp"
                        android:src="@drawable/notes"/>

                    <TextView
                        android:id="@+id/closet_item_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notes"
                        android:textColor="?colorAccent"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"/>

                    <TextView
                        android:id="@+id/closet_item_notes_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/attributes_text"
                        android:padding="3dp"
                        android:layout_marginBottom="20dp" />

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <CheckBox
                    android:id="@+id/cb_worn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Worn" />

                <CheckBox
                    android:id="@+id/cb_shared"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shared" />

                <CheckBox
                    android:id="@+id/cb_lost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lost" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />

    </LinearLayout>

    <include
        layout="@layout/bottom_bar"
        android:id="@+id/view_clothing_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@+dimen/bottom_bar_height"
        android:layout_weight="0"
        />

</LinearLayout>
