<?xml version="1.0" encoding="utf-8"?>

<!--created by Yuanmin Zhang on May16,2016-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?color1"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <!--closet icon set-->
    <LinearLayout
        android:id="@+id/closet_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="?color1"
        android:onClick="goToCloset"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/bottom_bar_closet_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/abc_dialog_padding_material"
            android:scaleType="fitCenter"
            android:src="@drawable/closet"
            android:contentDescription="@string/closet_button_picture_description"/>

        <TextView
            android:id="@+id/closetTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="@dimen/abc_action_bar_content_inset_material"
            android:text="@string/closet"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:typeface="monospace"
            android:textSize="@dimen/abc_text_size_large_material" />
    </LinearLayout>

    <!--outfit generator icon set -->
    <LinearLayout
        android:id="@+id/outfitgen_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="?color2"
        android:onClick="goToOutfitGenerator"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_bar_outfit_generator_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/abc_dialog_padding_material"
            android:scaleType="fitCenter"
            android:src="@drawable/outfitgen"
            android:contentDescription="@string/stylist_button_picture_description"/>

        <TextView
            android:id="@+id/outfitgenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="@dimen/abc_action_bar_content_inset_material"
            android:text="@string/outfit_creator"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textSize="@dimen/abc_text_size_large_material" />

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <!--lookbook icon set -->
    <LinearLayout
        android:id="@+id/lookbook_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="?color3"
        android:onClick="goToLookbook"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_bar_lookbook_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/abc_dialog_padding_material"
            android:scaleType="fitCenter"
            android:src="@drawable/lookbook"
            android:contentDescription="@string/lookbook_button_picture_description"/>

        <TextView
            android:id="@+id/lookbookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="@dimen/abc_action_bar_content_inset_material"
            android:text="@string/lookbook"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textSize="@dimen/abc_text_size_large_material" />

    </LinearLayout>

    <!--More icon set-->
    <LinearLayout
        android:id="@+id/more_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="?color4"
        android:onClick="onMorePressed"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/abc_alert_dialog_button_bar_height"
            android:scaleType="fitCenter"
            android:src="@drawable/washing_machine"
            android:contentDescription="@string/more_button_picture_description"/>

        <TextView
            android:id="@+id/moreTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="@dimen/abc_action_bar_content_inset_material"
            android:text="Laundry"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textSize="@dimen/abc_text_size_large_material" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
