<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light_closet"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/closet_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="?color1"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/bottom_bar_closet_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/closet_button_picture_description"
                android:padding="@dimen/abc_dialog_padding_material"
                android:scaleType="fitCenter"
                android:src="@drawable/closet"/>

            <TextView
                android:id="@+id/closetTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:text="@string/closet"
                android:textAlignment="center"
                android:textIsSelectable="false"
                android:textSize="@dimen/abc_text_size_large_material"
                android:typeface="monospace"/>
        </LinearLayout>

        <!--outfit generator icon set -->
        <LinearLayout
            android:id="@+id/outfitgen_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="?color2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_bar_outfit_generator_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/stylist_button_picture_description"
                android:padding="@dimen/abc_dialog_padding_material"
                android:scaleType="fitCenter"
                android:src="@drawable/outfitgen"/>

            <TextView
                android:id="@+id/outfitgenTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:text="@string/outfit_creator"
                android:textAlignment="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:typeface="monospace"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!--fragment_lookbook icon set -->
        <LinearLayout
            android:id="@+id/lookbook_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="?color3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bottom_bar_lookbook_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/lookbook_button_picture_description"
                android:padding="@dimen/abc_dialog_padding_material"
                android:scaleType="fitCenter"
                android:src="@drawable/lookbook"/>

            <TextView
                android:id="@+id/lookbookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:text="@string/lookbook"
                android:textAlignment="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:typeface="monospace"/>

        </LinearLayout>

        <!--More icon set-->
        <LinearLayout
            android:id="@+id/more_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="?color4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/more_button_picture_description"
                android:padding="@dimen/abc_alert_dialog_button_bar_height"
                android:scaleType="fitCenter"
                android:src="@drawable/washing_machine"/>

            <TextView
                android:id="@+id/moreTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:text="Laundry"
                android:textAlignment="center"
                android:textSize="@dimen/abc_text_size_large_material"
                android:typeface="monospace"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
